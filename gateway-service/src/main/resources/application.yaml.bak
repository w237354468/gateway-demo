spring:
  cloud:
    gateway:
      routes:
        - id: provider
          uri: lb://provider-service
          predicates:
            - Path=/echo/**
      default-filters:
        - name: CircuitBreaker
          args:
            name: global-cb
            fallbackUri: forward:/cache/broken
        - name: Retry
          args:
            retries: 1
            series: ''
            statuses: BAD_GATEWAY,INTERNAL_SERVER_ERROR,SERVICE_UNAVAILABLE
            methods: GET,POST
  application:
    name: gateway-service
server:
  port: 8042